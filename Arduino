#include <driver/i2s.h>

#define I2S_WS     21   // LRCLK
#define I2S_SCK    19   // BCLK
#define I2S_SD     18   // DOUT shared from both mics

#define SAMPLE_RATE     16000
#define BUFFER_SAMPLES  1024

i2s_config_t i2s_config = {
    .mode = (i2s_mode_t)(I2S_MODE_MASTER | I2S_MODE_RX),
    .sample_rate = SAMPLE_RATE,
    .bits_per_sample = I2S_BITS_PER_SAMPLE_32BIT,
    .channel_format = I2S_CHANNEL_FMT_RIGHT_LEFT,
    .communication_format = I2S_COMM_FORMAT_STAND_I2S,   
    .intr_alloc_flags = 0,
    .dma_buf_count = 4,
    .dma_buf_len = BUFFER_SAMPLES,
    .use_apll = false,
    .tx_desc_auto_clear = false,
    .fixed_mclk = 0
};

i2s_pin_config_t pin_config = {
    .bck_io_num = I2S_SCK,
    .ws_io_num = I2S_WS,
    .data_out_num = -1,
    .data_in_num = I2S_SD
};

void setup() {
    Serial.begin(460800);     

    i2s_driver_install(I2S_NUM_0, &i2s_config, 0, NULL);
    i2s_set_pin(I2S_NUM_0, &pin_config);
}

void loop() {
    static int32_t buffer[BUFFER_SAMPLES * 2];
    size_t bytes_read;

    i2s_read(I2S_NUM_0, buffer, sizeof(buffer), &bytes_read, portMAX_DELAY);

    int samples = bytes_read / 4;

    for (int i = 0; i < samples; i++) {
        int32_t raw = buffer[i];

        // lấy 24-bit MSB
        int32_t sample24 = raw >> 8;

        // scale 24-bit → 16-bit
        int16_t sample16 = sample24 >> 11;

        // gửi little-endian
        Serial.write((uint8_t)(sample16 & 0xFF));
        Serial.write((uint8_t)((sample16 >> 8) & 0xFF));
    }
}
